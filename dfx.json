{
  "version": 1,
  "canisters": {
    "tf_backend": {
      "type": "motoko",
      "main": "src/tf_backend/main.mo"
    },
    "tf_frontend": {
      "type": "assets",
      "source": [
        "src/tf_frontend/public"
      ],
      "dependencies": [
        "tf_backend"
      ]
    }
  },
  "defaults": {
    "build": {
      "packtool": "",
      "args": ""
    }
  },
  "networks": {
    "local": {
      "bind": "localhost:8000",
      "type": "ephemeral"
    },
    "sodium": {
      "providers": [
        "https://sodium.dfinity.network"
      ],
      "type": "persistent"
    },
    "mainnet": {
      "providers": [
        "https://identity.ic0.app"
      ],
      "type": "persistent"
    }
  },
  "output_env_file": ".env"
}
